{
  "expo": {
    "name": "Malayalam Learning App",
    "slug": "malayalam-learning-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#3498db",
    "primaryColor": "#3498db",
    "description": "Learn Malayalam language with interactive lessons, flashcards, and quizzes. Master letters, vocabulary, and grammar through engaging practice exercises.",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3498db"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "userInterfaceStyle": "automatic",
      "bundleIdentifier": "com.malayalamlearning.app",
      "buildNumber": "1",
      "infoPlist": {
        "UISupportsDocumentBrowser": false,
        "UIRequiresFullScreen": false,
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "NSLocalNetworkUsageDescription": "This app uses local network access for development purposes only.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.malayalamlearning.app",
      "versionCode": 1,
      "permissions": [],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3498db"
      },
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.malayalamlearning.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "themeColor": "#3498db"
    },
    "plugins": [
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "PORTRAIT"
        }
      ]
    ]
  }
}